<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>SearchStudentServlet</servlet-name>
        <servlet-class>com.gradecalculator.SearchStudentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SearchStudentServlet</servlet-name>
        <url-pattern>/api/students/search</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoadStudentServlet</servlet-name>
        <servlet-class>com.gradecalculator.LoadStudentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoadStudentServlet</servlet-name>
        <url-pattern>/api/students/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoadSubjectServlet</servlet-name>
        <servlet-class>com.gradecalculator.LoadSubjectServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoadSubjectServlet</servlet-name>
        <url-pattern>/api/subjects/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RegisterStudentServlet</servlet-name>
        <servlet-class>com.gradecalculator.RegisterStudentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterStudentServlet</servlet-name>
        <url-pattern>/api/students</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>


    <resource-ref>
        <description>DB Connection</description>
        <res-ref-name>jdbc/gradesDB</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
    
</web-app>
